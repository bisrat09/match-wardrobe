{
  "expo": {
    "name": "Closy",
    "slug": "match-wardrobe",
    "scheme": "closy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bisratbelayneh.closy",
      "buildNumber": "13",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Closy needs access to your camera to take photos of your clothing items.",
        "NSPhotoLibraryUsageDescription": "Closy needs access to your photo library to select photos of your clothing items.",
        "NSLocationWhenInUseUsageDescription": "Closy needs your location to provide weather-based outfit suggestions.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "runtimeVersion": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      [
        "expo-image-picker",
        {
          "photosPermission": "Closy needs access to your photos to add clothing items to your digital closet."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Closy needs your location to provide weather-based outfit suggestions."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "cc5d3fcc-6efb-4d71-b430-3201b71d092a"
      }
    },
    "owner": "bisrat09",
    "updates": {
      "url": "https://u.expo.dev/cc5d3fcc-6efb-4d71-b430-3201b71d092a"
    }
  }
}
